@namespace PlannerApp.Components.Authentication

<EditForm Model="model" OnValidSubmit="LoginUserAsync">
    <FluentValidationValidator />
    <MudCard>
        <MudCardHeader>
            <MudText Typo="Typo.h6">Welcome to PlannerApp v2.0</MudText>
        </MudCardHeader>
        <MudCardContent>
            <MudTextField Label="Email" HelperText="Required" Placeholder="test@plannerapp.com" @bind-Value="model.Email" />
            <MudTextField InputType="InputType.Password" Label="Password" HelperText="Required" @bind-Value="model.Password" />
        </MudCardContent>
        <MudCardActions>
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">
                Login
            </MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Secondary" Class="ml-auto">
                Create Account
            </MudButton>
        </MudCardActions>
    </MudCard>
</EditForm>