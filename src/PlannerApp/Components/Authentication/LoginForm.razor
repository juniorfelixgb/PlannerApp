
<EditForm Model="_loginRequest" 
          OnValidSubmit="LoginUserAsync">
    <DataAnnotationsValidator />
    <MudCard>
        <MudCardContent>
            <MudCardHeader>
                <MudText Typo="Typo.h6">Welcome to PlannerApp V2.0</MudText>
            </MudCardHeader>

            <MudTextField Label="Email"
                          HelperText="Required"
                          @bind-Value="@_loginRequest.Email" />

            <MudTextField InputType="InputType.Password" 
                          Label="Password"
                          HelperText="Required"
                          @bind-Value="@_loginRequest.Password" />

            <ValidationSummary />

            @if (!string.IsNullOrWhiteSpace(_errorMessage))
            {
                <MudAlert AlertTextPosition="AlertTextPosition.Center"
                          Severity="Severity.Error"
                          Variant="Variant.Filled"
                          Class="my-2">@_errorMessage</MudAlert>
            }

        </MudCardContent>

        <MudCardActions>
            <MudButton ButtonType="ButtonType.Submit"
                       Variant="Variant.Outlined"
                       Color="Color.Primary"
                       Disabled="_isBusy">Login</MudButton>

            <MudButton Variant="Variant.Outlined"
                       Color="Color.Secondary"
                       Class="ml-1"
                       Disabled="_isBusy"
                       OnClick="RedirectToRegister">Create Account</MudButton>
        </MudCardActions>

    </MudCard>
</EditForm>

